                <MenuItem Header="Modificar" Height="28" Margin="0" Name="ModificarMenuItem" Width="71" />
                <MenuItem Header="Eliminar" Height="28" Margin="0" Name="EliminarMenuItem" Width="71" />
                <MenuItem Header="Guardar" Height="28" Margin="0" Name="GuardarMenuItem" Width="71" />
                <MenuItem Header="Cancelar" Height="28" Margin="0" Name="CancelarMenuItem" Width="71" />
            </Menu>
            <my:DataGrid Margin="26,152,21,21" />
            <Canvas Height="98" Margin="27,40,21,0" VerticalAlignment="Top">
                <Label Canvas.Left="19" Canvas.Top="8" Height="21" Width="76">Codigo</Label>
                <Label Canvas.Left="19" Canvas.Top="33" Height="21.5" Width="76">Nombre</Label>
                <Label Canvas.Left="19" Canvas.Top="58.5" Height="22" Width="76">Descripcion</Label>
                <TextBox Canvas.Left="108" Canvas.Top="8" Height="21" TextWrapping="Wrap" Width="102" />
                <TextBox Canvas.Left="108" Canvas.Top="33" Height="21.5" TextWrapping="Wrap" Width="389" />
                <TextBox Canvas.Left="108" Canvas.Top="59" Height="21.5" TextWrapping="Wrap" Width="389" />
            </Canvas>
        </Grid>
    </Grid>
</Window>